# Football 501 Scraping Service - Environment Variables
# Copy this file to .env and update values for your environment

# Application
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8001

# Database
DATABASE_URL=postgresql://football501:dev_password@localhost:5432/football501

# FBref Scraping
FBREF_WAIT_TIME=7
MAX_RETRIES=3
REQUEST_TIMEOUT=30

# Scheduling
WEEKLY_UPDATE_CRON=0 3 * * SUN
MONTHLY_UPDATE_CRON=0 2 1 * *
ENABLE_SCHEDULER=true

# Current Season
CURRENT_SEASON=2024-2025

# Admin API
ADMIN_API_ENABLED=true
ADMIN_JWT_SECRET=change-this-in-production

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/football501-scraper.log

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
